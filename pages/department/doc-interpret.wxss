/* pages/appointment/appointment.wxss */
page{
  width:100%;
  background:#eeeeee;
}
.container{
  width:100%;
  height:100%;
  background:#eeeeee;
  margin:0;
  padding:0;
  font-size:28rpx;
}
.info{
  width:100%;
  background:#ffffff;
  text-align: center;
}
.portrait{
  width:160rpx;
  height:160rpx;
  margin-top:45rpx;
  border-radius: 5rpx;
}
.name_doctor{
  overflow:hidden;
  width:200rpx;
  margin:10rpx auto;
}
.name{
  float:left;
  font-family: PingFang-SC-Regular;
	font-size: 34rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 49rpx;
	letter-spacing: 1rpx;
	color: #333333;
}
.doctor{
  font-size: 24rpx;
  line-height: 55rpx;
  color: #4497f7;
}
.gray{
  color:#999999;
  font-size: 24rpx;
  overflow: hidden;
  width:270rpx;
  margin:0 auto;
}
.left{
  float:left;
}
.gray1{
  color:#999999;
  font-size: 24rpx;
}
.address{
  width:500rpx;
  margin:0 auto;
}
.icon{
  width:30rpx;
  height:38rpx;
  float:left;
}
.shuoMing{
  width:100%;
  height:90rpx;
  font-size:28rpx;
  color: #646464;
  background:#fff;
  margin:20rpx auto;
  padding:20rpx;
}
.footer{
  width:100%;
  padding:5rpx 20rpx;
  background:#ffffff;
  color: #646464;
}
.foot-top{
  overflow: hidden;
  line-height: 80rpx;
}
.foot-left{
  float:left; 
}
.foot-right{
  float:right; 
}
.ji{
  line-height: 80rpx;
  margin-left:20rpx;
}
.text{
  padding:20rpx;
  width:670rpx;
  margin:0rpx auto;
  height:300rpx;
  border:1rpx solid #d7d7d7;
}
.shangChuan{
  line-height: 80rpx;
}
.imge{
  width:100%;
}
.img{
  width:110rpx;
  height:110rpx;
  margin-right:30rpx;
}
.item{
  width:690rpx;
  line-height:100rpx;
  overflow: hidden;
  color: #666666;
  margin:0 auto;
  border-bottom:1rpx solid #e6e6e6;
}
.item .left{
  float:left;
}
.item .right{
  float:right;
  width:300rpx;
  text-align: right;
}