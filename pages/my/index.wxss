.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
  font-size:24rpx;
  background:#fff;
}
.header{
  width:100%;
  height:360rpx;
  background:#4497F7;
  border-radius: 0 0 35% 0;
  color:#fff;
  overflow: hidden;
}
.title{
  text-align: center;
  line-height:90rpx;
  margin-top:40rpx;
  font-size:30rpx;
}
.header-con{
  float:right;
  margin-top:0rpx;
  padding-right:15px;
}
.user{
  width:100%;
  padding-left:150rpx;
  padding-top:20rpx;
  position: relative;
}
.user-img{
  width:140rpx;
  height:50rpx;
}
.img-text{
  position: absolute;
  top:25rpx;
  left:160rpx;
  font-size:28rpx;
}
.head-portrait{
  width:100rpx;
  height:100rpx;
  margin:0 10px 0 20px;
  float:left;
}
.avatar{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
}
.content{
  margin:15rpx 0 0 0;
  overflow: hidden;
}
.hello{
  font-size:30rpx;
}
.code{
  float:left;
}
.copy-btn{
  line-height:40rpx;
  margin-left:10rpx;
  font-size:32rpx;
  float:left;
  background:#4497F7;
  color:#fff;
  border:none;
}
.body-con{
  width:90%;
  height:610rpx;
  margin:0 auto;
  border-bottom: 2px solid #eee;
}
.body{
  width:100%;
  display: flex;
  padding-top:60rpx;
  background:#fff;
  text-align: center;
}
.body2{
  padding-bottom: 40rpx;
}
.body .item{
  display: flex;
  flex-direction: column;
  width:178rpx;
  margin:0 auto;
  text-align: center;
}
.body .item .icon{
  padding-left:50rpx;
  width:40px;
  height:40px;
}
.body .item .icon1{
  width:42px;
  height:40px;
  padding-left:50rpx;
}
.body .item .icon2{
  width:41px;
  height:40px;
  padding-left:50rpx;
}
.body .item .icon3{
  width:41px;
  height:40px;
  padding-left:50rpx;
}
.body .item .text{
  margin-top:5px;
  margin-left:15rpx;
  color:#ccc;
}
.body2{
  margin-bottom: 60rpx;
}
.footer{
  height:230rpx;
  width:100%;
  text-align: center;
}
.footer-btn{
  background: #4497F7;
  color:#fff;
  line-height:80rpx;
  width:250rpx;
  margin-top:85rpx;
  border-radius: 5px;
}
