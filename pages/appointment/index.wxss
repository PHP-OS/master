/* pages/appointment/appointment.wxss */
page{
  width:100%;
  background:#eeeeee;
}
.container{
  width:100%;
  height:100%;
  background:#eeeeee;
  margin:0;
  padding:0;
  font-size:28rpx;
}
.info{
  width:100%;
  background:#ffffff;
  text-align: center;
}
.portrait{
  width:160rpx;
  height:160rpx;
  margin-top:45rpx;
  border-radius: 5rpx;
}
.name_doctor{
  overflow:hidden;
  width:200rpx;
  margin:10rpx auto;
}
.name{
  float:left;
  font-family: PingFang-SC-Regular;
	font-size: 34rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 49rpx;
	letter-spacing: 1rpx;
	color: #333333;
}
.doctor{
  font-size: 24rpx;
  line-height: 55rpx;
  color: #4497f7;
}
.gray{
  color:#999999;
  font-size: 24rpx;
  overflow: hidden;
  width:270rpx;
  margin:0 auto;
}
.left{
  float:left;
}
.gray1{
  color:#999999;
  font-size: 24rpx;
}
.address{
  width:500rpx;
  margin:0 auto;
  margin-bottom: 30rpx;
}
.icon{
  width:30rpx;
  height:38rpx;
  float:left;
}
.details{
  width:100%;
  height:260rpx;
  overflow: hidden;
  margin-top:20rpx;
  background:#ffffff;
  position: relative;
}
.details_title{
  font-size:34rpx;
  margin-top:20rpx;
  margin-left:40rpx; 
}
.left2{
  width:100%;
  margin-top:50rpx;
  margin-left:40rpx;
  float:left;
  color: #666666;
  overflow: hidden;
}
.left_time{
  float:left;
  color: #666666;
  overflow: hidden;
}
.day{
  width:90rpx;
  height:40rpx;
  text-align: center;
  background:#4497f7;
  border-radius: 5px;
  float:left;
  margin-left:10rpx;
  color:#fff;
}
.left1{
  margin-left:40rpx;
  margin-bottom:40rpx;
  float:left;
  width:280rpx;
  color: #666666;
  overflow: hidden;
}
.btn{
  width:135rpx;
  height:50rpx;
  background:#4497f7;
  font-size:24rpx;
  line-height:48rpx;
  color:#fff;
}
.red{
  color:red;
  float:left;
}
.header{
  width:100%;
  height:129rpx;
  background:#4497f7;
}
.back-left{
  width:16rpx;
  height:30rpx;
  margin-top:70rpx;
  margin-left:30rpx;
  float:left;
}
.header-title{
  width:100%;
  margin-left:346rpx;
  margin-top:70rpx;
  color:#ffffff;
}
